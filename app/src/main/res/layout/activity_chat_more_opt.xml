<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ChatMoreOptActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.mikhaellopez.circularimageview.CircularImageView
                android:id="@+id/iv_useracct_image"
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:layout_marginTop="24dp"
                android:src="@drawable/ic_photo_colored"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:civ_border="false"/>

            <TextView
                android:id="@+id/tv_useracct_name"
                style="@style/TextAppearance.AppCompat.Medium"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginTop="8dp"
                android:text="Beverly May Castillo"
                android:textColor="@color/colorBlack"
                app:layout_constraintEnd_toEndOf="@+id/iv_useracct_image"
                app:layout_constraintStart_toStartOf="@+id/iv_useracct_image"
                app:layout_constraintTop_toBottomOf="@+id/iv_useracct_image" />

            <LinearLayout
                android:id="@+id/layout_useracct_call"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="24dp"
                android:layout_marginRight="24dp"
                android:background="@drawable/custom_block_rounded_btn"
                android:backgroundTint="@color/colorLighterPrimary"
                android:orientation="vertical"
                android:padding="10dp"
                app:layout_constraintBottom_toBottomOf="@+id/layout_useracct_videocall"
                app:layout_constraintEnd_toStartOf="@+id/layout_useracct_videocall"
                app:layout_constraintTop_toTopOf="@+id/layout_useracct_videocall">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_call"
                    android:tint="@color/colorPrimary" />

            </LinearLayout>

            <TextView
                android:id="@+id/textView8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="Call"
                android:textSize="12dp"
                app:layout_constraintEnd_toEndOf="@+id/layout_useracct_call"
                app:layout_constraintStart_toStartOf="@+id/layout_useracct_call"
                app:layout_constraintTop_toBottomOf="@+id/layout_useracct_call" />

            <LinearLayout
                android:id="@+id/layout_useracct_videocall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:background="@drawable/custom_block_rounded_btn"
                android:backgroundTint="@color/colorLighterPrimary"
                android:orientation="vertical"
                android:padding="10dp"
                app:layout_constraintEnd_toEndOf="@+id/tv_useracct_name"
                app:layout_constraintStart_toStartOf="@+id/tv_useracct_name"
                app:layout_constraintTop_toBottomOf="@+id/tv_useracct_name">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_videocam"
                    android:tint="@color/colorPrimary" />

            </LinearLayout>

            <TextView
                android:id="@+id/textView11"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="16dp"
                android:text="Video"
                android:textSize="12dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@+id/layout_useracct_videocall"
                app:layout_constraintStart_toStartOf="@+id/layout_useracct_videocall"
                app:layout_constraintTop_toBottomOf="@+id/layout_useracct_videocall" />

            <LinearLayout
                android:id="@+id/layout_useracct_view_profile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginLeft="24dp"
                android:background="@drawable/custom_block_rounded_btn"
                android:backgroundTint="@color/colorLighterPrimary"
                android:orientation="vertical"
                android:padding="10dp"
                app:layout_constraintBottom_toBottomOf="@+id/layout_useracct_videocall"
                app:layout_constraintStart_toEndOf="@+id/layout_useracct_videocall"
                app:layout_constraintTop_toTopOf="@+id/layout_useracct_videocall">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_forum_user"
                    android:tint="@color/colorPrimary" />

            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="Profile"
                android:textSize="12dp"
                app:layout_constraintEnd_toEndOf="@+id/layout_useracct_view_profile"
                app:layout_constraintStart_toStartOf="@+id/layout_useracct_view_profile"
                app:layout_constraintTop_toBottomOf="@+id/layout_useracct_view_profile" />


        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="5dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="10dp">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/tv_menu_view_logs"
                    style="@style/TextAppearance.AppCompat.Menu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="24dp"
                    android:layout_marginLeft="24dp"
                    android:layout_marginTop="16dp"
                    android:text="View Logs"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <ImageView
                    android:id="@+id/iv_view_logs"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginEnd="24dp"
                    android:layout_marginRight="24dp"
                    android:src="@drawable/ic_chevron_right"
                    app:layout_constraintBottom_toBottomOf="@+id/tv_menu_view_logs"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/tv_menu_view_logs" />

                <View
                    android:id="@+id/view_log_divider"
                    style="@style/Divider"
                    android:layout_width="0dp"
                    android:layout_height="0.5dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="16dp"
                    android:layout_marginRight="16dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tv_menu_view_logs" />

                <TextView
                    android:id="@+id/tv_menu_notification"
                    style="@style/TextAppearance.AppCompat.Menu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="Call History"
                    app:layout_constraintStart_toStartOf="@+id/tv_menu_view_logs"
                    app:layout_constraintTop_toBottomOf="@+id/view_log_divider" />

                <ImageView
                    android:id="@+id/iv_notifications"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginTop="8dp"
                    android:src="@drawable/ic_chevron_right"
                    app:layout_constraintBottom_toBottomOf="@+id/tv_menu_notification"
                    app:layout_constraintEnd_toEndOf="@+id/iv_view_logs"
                    app:layout_constraintTop_toBottomOf="@+id/view_log_divider" />

                <View
                    android:id="@+id/view_log_divider1"
                    style="@style/Divider"
                    android:layout_width="0dp"
                    android:layout_height="0.5dp"
                    android:layout_marginTop="8dp"
                    app:layout_constraintEnd_toEndOf="@+id/view_log_divider"
                    app:layout_constraintStart_toStartOf="@+id/view_log_divider"
                    app:layout_constraintTop_toBottomOf="@+id/tv_menu_notification" />

                <TextView
                    android:id="@+id/tv_useracct_notifs"
                    style="@style/TextAppearance.AppCompat.Menu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="16dp"
                    android:text="Notifications"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="@+id/tv_menu_notification"
                    app:layout_constraintTop_toBottomOf="@+id/view_log_divider1" />

                <androidx.appcompat.widget.SwitchCompat
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintBottom_toBottomOf="@+id/tv_useracct_notifs"
                    app:layout_constraintEnd_toEndOf="@+id/iv_notifications"
                    app:layout_constraintTop_toTopOf="@+id/tv_useracct_notifs" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="5dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Block this user"
                    style="@style/TextAppearance.AppCompat.Menu"
                    android:textColor="@color/colorRed"/>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_all_chat_pictures"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="10dp"/>

    </LinearLayout>

</ScrollView>